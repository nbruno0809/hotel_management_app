@page
@model HotelManagement.Pages.RoomsModel
@{

}

<div class="container w-100">
	<div class="row">
		<div class="col-lg-6 vstack gap-2">
			@foreach (var type in Model.RoomTypes)
			{
				<div class="card p-3 hstack" >
					<div>
						<h4>@type.Name</h4>
						<h6>Number of beds: @type.NumberOfBeds</h6>
						<h6>Price @type.PricePerNight€/night</h6>
						<h6>Number of rooms: @(type.Rooms == null ? "null" : type.Rooms.ToList().Count())</h6>
						<p>Descrtiption: @type.Description</p>
					</div>
					<div class="vstack justify-content-end align-items-end">
						<a asp-page="/Admin/Room" asp-route-id=@type.Id >See rooms</a>
					</div>
				</div>
			}
		</div>
		<div class="col-lg-6">
			<form class="vstack gap-2"  method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="Input.Name" class="form-control" aria-required="true" />
					<label asp-for="Input.Name">Name</label>
					<span asp-validation-for="Input.Name" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Input.Description" class="form-control" />
					<label asp-for="Input.Description">Description</label>
					<span asp-validation-for="Input.Description" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Input.PricePerNight" type="number" min=0 class="form-control" aria-required="true" />
					<label asp-for="Input.PricePerNight">Price / night</label>
					<span asp-validation-for="Input.PricePerNight" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Input.NumberOfBeds" type="number" min="1" max="30" class="form-control" aria-required="true" />
					<label asp-for="Input.NumberOfBeds">Number of beds</label>
					<span asp-validation-for="Input.NumberOfBeds" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Input.ImgPath" class="form-control"/>
					<label asp-for="Input.ImgPath">Image URL</label>
					<span asp-validation-for="Input.ImgPath" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-dark">Create new</button>
			</form>
		</div>
	</div>
</div>
